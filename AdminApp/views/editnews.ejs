    <div class="container">
        <h2 class="text-center">News List</h2>
                  <table class="table table-striped" id="myTable">
                    <caption>List of news</caption>
                  <thead class="table-dark">
                    <tr>
                      <th>Title</th>
                      <th>Description</th>
                      <th>Published At</th>
                      <th>Edit/Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(var i=0; i<data.length; i++) {%>
                  <tr>
                    <td><%= data[i].title %></td>
                    <td><%= data[i].description %></td>
                    <td><%= data[i].publishedAt %></td>
                    <td>
                      <button type="button" class="update btn btn-warning"
                       data-toggle="modal" data-target="#myModal" 
                       id="<%=data[i].name %>">
                          Edit
                      </button>
                        <button type="button" id="<%=data[i].name %>" 
                          class="delete btn btn-danger" 
                          value ="<%=data[i].name %>">
                          Delete
                        </button>
                    </td>
                  </tr>
                <% } %>
                  </tbody>
                </table>
    </div>



